name: download_data
conda_env: conda.yml

entry_points:
    main:
        parameters:
            file_url:
                description: URL to download data from
                type: uri
            artifact_name:
                description: Name of the output artifact
                type: str
            artifact_type:
                description: Type of output artifact
                type: str
            artifact_description:
                description: Description of the output artifact
                type: str
